<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:orientation="vertical"
    android:background="@drawable/friend_bg">
    
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
    	android:orientation="horizontal">
    
		<TextView 
	        android:id="@+friend/new_messages"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_marginTop="2dip"
	        android:layout_marginLeft="2dip"
	        android:layout_alignLeft="@+friend/id"
	        android:text="(5)" 
	        android:textSize="12sp"
	        android:textStyle="italic" 
	        android:textColor="@color/whites"
	        android:visibility="invisible" />
		
		<CheckedTextView 
	        android:id="@+friend/active"
	        android:layout_height="12dip"
	        android:layout_width="12dip"
	        android:layout_alignParentRight="true"
	        android:layout_marginTop="4dip"
	        android:layout_marginRight="3dip"
	        android:background="@drawable/lights"
	        android:layout_alignRight="@+friend/id"
	        android:visibility="invisible" />
	</RelativeLayout>
	
    <TextView
        android:id="@+friend/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:gravity="center_horizontal"
        android:layout_marginTop="-2dip"
        android:textSize="16sp"
        android:text="Friend ID" 
        android:textColor="@color/whites" 
        android:visibility="visible" />
    
</LinearLayout>