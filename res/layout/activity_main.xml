<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.drawerchat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/media_play_indicator"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:freezesText="true"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:scrollHorizontally="true"
        android:singleLine="true" 
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dip"
        android:layout_centerHorizontal="true" >

        <ImageButton
            android:id="@+id/media_play_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/previous_button" />

        <ImageButton
            android:id="@+id/media_play_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/play_button" />
        
        <ImageButton
            android:id="@+id/media_play_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/next_button" />
        
    </LinearLayout>

    <com.drawerchat.widget.SlidingDrawer
        xmlns:my="http://schemas.android.com/apk/res/com.drawerchat"
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        my:content="@+id/content"
        my:direction="bottomToTop"
        my:handle="@+id/handle" >

        <include
            android:id="@id/content"
            layout="@layout/drawer_chat" />

        <ImageView
            android:id="@id/handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="SlidingDrawer"
            android:src="@drawable/chat_handle_reverse" />
    </com.drawerchat.widget.SlidingDrawer>

</RelativeLayout>